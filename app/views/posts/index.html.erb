<p id="notice"><%= notice %></p>
<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
      <tr>
        <td>Title:</td>
        <td><%=post.title  %></td>
        
      </tr>
      <tr>
        <td>Content:</td>
        <td><%=post.content  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
  
<%= link_to 'New Post', new_post_path %>
<% end %>
